<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <template id="report_invoice_finnish_document" inherit_id="l10n_fi_invoice.report_invoice_finnish_document">
        <xpath expr="//div[@style='border-top: 1px dashed gray']" position="replace"/>
        <xpath expr="//div[@style='text-align: center;']/.." position="replace"/>
        <xpath expr="//div[@class='bank-transfer-wrap last-page']" position="attributes">
            <attribute name="class">bank-transfer-wrap last-page container</attribute>
            <attribute name="style">position: fixed; bottom: -1500px !important; width: 97%; height: 150px; border-top: 1px solid black;</attribute>
        </xpath>
    </template>

    <template id="report_layout_footer_finnish" inherit_id="l10n_fi_invoice.report_layout_finnish">
        <xpath expr="//t[@t-call='l10n_fi_invoice.report_layout_footer_finnish']" position="replace"/>
    </template>
</odoo>
